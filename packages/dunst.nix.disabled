{ icons, ... }:

{
  services.dunst = {
    enable = true;

    iconTheme = {
      name = icons.name;
      package = icons.package;
      size = icons.size;
    };

    settings = {
      global = {
        markup = "full";
        format = ''<big><u><b>%a</b></u></big>\n<b>%s</b>\n%b'';
        font = "JetBrainsMono Nerd Font 8, Monospace 8";

        corner_radius = 4;
        monitor = 1;
      };
    };
  };
}
